<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoList</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card mb-3" style="width: 27rem;">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTBEJoK50Apcz2KZ1OHotzAgiENRXdqz_ZxHbwbocy5hg&s"
                            class="card-img-top" alt="...">
                    </div>
                    <div class="card-title text-center">
                        <h2>All Todos!</h4>
                            <a href="/todolist/new">Create new Todo</a>
                    </div>
                    <% for(todo of todos) { %>
                        <div class="card">
                            <div class="card-body">
                                <h5>
                                    <%= todo.title %>
                                </h5>
                                <ul>
                                    <li class="card-text">
                                        <%= todo.description %>
                                    </li>
                                </ul>
                                <a href="/todolist/<%= todo._id %> ">View:
                                    <%= todo.title%>
                                </a>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>