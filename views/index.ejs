<body>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card mb-3" style="width: 27rem;">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTBEJoK50Apcz2KZ1OHotzAgiENRXdqz_ZxHbwbocy5hg&s"
                            class="card-img-top" alt="...">
                    </div>
                    <div class="card-title text-center">
                        <h2>All Todos!</h2>
                        <div class="list-group mt-3">
                            <a href="/todolist/new" class="list-group-item list-group-item-action active"
                                aria-current="true">Create new Todo
                            </a>
                        </div>
                    </div>
                    <% for(todo of todos) { %>
                        <div class="card">
                            <div class="card-body">
                                <h5><b>
                                        <ol>
                                            <li>
                                                <%= todo.title %>
                                            </li>
                                        </ol>
                                    </b>
                                </h5>
                                <ul>
                                    <li class="card-text">
                                        <%= todo.description %>
                                    </li>
                                </ul>
                                <div class="btn btn-light">
                                    <a href="/todolist/<%= todo._id %>"
                                        class="list-group-item list-group-item-action">View:
                                        <%= todo.title%>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>