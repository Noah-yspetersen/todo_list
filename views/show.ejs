<div class="card-title text-center">
    <h2>Show Todo</h4>
        <div class="list-group mt-3">
            <a href="/todolist/new" class="list-group-item list-group-item-action active" aria-current="true">Create new
                Todo
            </a>
        </div>
</div>
<div class="card">
    <div class="card-body">
        <h5>
            <%= todo.title %>
        </h5>
        <ul>
            <li class="card-text">
                <%= todo.description %>
            </li>
        </ul>
    </div>
</div>
<div class="btn btn-secondary mt-3">
    <a href="/todolist" class="list-group-item list-group-item-action">All todos
    </a>
</div>
<div class="btn btn-light mt-3">
    <a href="/todolist/<%= todo._id %>/edit" class="list-group-item list-group-item-action">Edit
        todo
    </a>
</div>
<form action="/todolist/<%=todo._id%>?_method=DELETE" method="POST" class="mt-3">
    <button class="btn btn-danger">Delete</button>
</form>