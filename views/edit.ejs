<div class="card-title text-center">
    <h2>Edit todo</h4>
</div>
<div class="card">
    <form action="/todolist/<%= todo._id %>?method=PUT" method="POST">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= todo.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="description"
                    value="<%= todo.description %>" required>
            </div>
            <div class="btn btn-secondary">
                <a href="/todolist<%= todo._id %>" class="list-group-item list-group-item-action">Back
                </a>
            </div>
            <button class="btn btn-success">Submit</button>
            <div class="list-group mt-3">
                <a href="/todolist" class="list-group-item list-group-item-action active" aria-current="true">All
                    todos</a>
            </div>
        </div>
    </form>
</div>