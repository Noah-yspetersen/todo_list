<div class="card-title text-center mb-3">
    <h2>Login</h4>
</div>
<div class="card">
    <form action="/login" method="POST">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label" for="username">Enter Username: </label>
                <input class="form-control" type="text" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Enter Password: </label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            <button class="btn btn-success">Sign in</button>
        </div>
    </form>
    <div class="list-group mb-3 mx-3">
        <a href="/todolist" class="list-group-item list-group-item-action active" aria-current="true">All todos</a>
    </div>
</div>